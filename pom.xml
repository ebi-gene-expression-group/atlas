        <berkeley.schema.name>bdb</berkeley.schema.name>
        <solr.host>ves-hx-75</solr.host>
        <!-- default values for integration testing properties -->
        <deploy.host>lime</deploy.host>
        <deploy.port>14092</deploy.port>
        <!-- for a given profile, if the selenium integration tests must be executed against a remote server (not running on the local host where 'maven verify' is being executed)
                then you have to override integration.test.host property in the profile -->
        <integration.test.host></integration.test.host>
        <integration.test.portnumber>9090</integration.test.portnumber>
        <!-- mailtrap.io user: atlas-developers@ebi.ac.uk -->
        <!-- mailtrap.io password: atlas-ebi-14 -->
        <mail.smtp.host>mailtrap.io</mail.smtp.host>
        <mail.smtp.port>2525</mail.smtp.port>
        <mail.smtp.user>feedback-mail-3e3ccf8bbcedeb96</mail.smtp.user>
        <mail.smtp.password>324c3bac45dfb398</mail.smtp.password>
        <mail.smtp.auth>true</mail.smtp.auth>

        <sonar.jdbc.url>
            jdbc:h2:tcp://lime:9092/sonar
        </sonar.jdbc.url>
        <sonar.jdbc.driver>org.h2.Driver</sonar.jdbc.driver>
        <sonar.jdbc.username>sonar</sonar.jdbc.username>
        <sonar.jdbc.password>sonar</sonar.jdbc.password>
        <sonar.host.url>http://lime:9000</sonar.host.url>
    </properties>

    <build>

        <finalName>gxa</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>${java-version}</source>
                    <target>${java-version}</target>
                    <showDeprecation>true</showDeprecation>
                    <showWarnings>true</showWarnings>
                    <!--<executable>${env.JAVA_HOME_7}/bin/javac</executable>-->
                    <!--<fork>true</fork>-->
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.12.2</version>
                <configuration>
                    <reportsDirectory>${surefire.and.failsafe.report.dir}</reportsDirectory>
                    <excludes>
                        <exclude>${test.acceptance.pattern}</exclude>
                    </excludes>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>2.12.2</version>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.12</version>
                <configuration>
                    <systemProperties>
                        <property>
                            <name>selenium.test.host</name>
                            <value>${integration.test.host}</value>
                        </property>
                        <property>
                            <name>selenium.test.portnumber</name>
                            <value>${integration.test.portnumber}</value>
                        </property>
                    </systemProperties>
                    <includes>
                        <include>${test.acceptance.pattern}</include>
                    </includes>
                    <reportsDirectory>${surefire.and.failsafe.report.dir}</reportsDirectory>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.atlassian.maven.plugins</groupId>
                <artifactId>maven-clover2-plugin</artifactId>
                <version>3.1.6</version>
                <configuration>
                    <licenseLocation>${user.home}/clover/clover.license</licenseLocation>
                    <snapshot>${user.home}/.clover/atlassian-plugins-clover.snapshot</snapshot>
                    <singleCloverDatabase>true</singleCloverDatabase>
                    <targetPercentage>70%</targetPercentage>
                    <reportDescriptor>clover-report.xml</reportDescriptor>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <version>2.1-SNAPSHOT</version>
                <dependencies>
                    <dependency>
                        <groupId>com.cenqua.clover</groupId>
                        <artifactId>clover</artifactId>
                        <version>3.1.6</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <!-- http port -->
                    <port>9090</port>
                    <!-- optionnal path to a context file -->
                    <contextFile></contextFile>
                    <!-- optionnal system propoerties you want to add -->
                    <systemProperties>
                    </systemProperties>
                    <!-- if you want to use test dependencies rather than only runtime -->
                    <useTestClasspath>false</useTestClasspath>
                    <!-- optionnal if you want to add some extra directories in the class loader -->
                    <additionalClasspathDirs>
                        <additionalClasspathDir></additionalClasspathDir>
                    </additionalClasspathDirs>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.lazerycode.jmeter</groupId>
                <artifactId>jmeter-maven-plugin</artifactId>
                <version>1.6.0</version>
            </plugin>

            <plugin>
                <groupId>com.github.searls</groupId>
                <artifactId>jasmine-maven-plugin</artifactId>
                <version>1.2.0.0</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>test</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!-- unfortunately js files seem to be loaded only if added to preloadSources -->
                    <preloadSources>
                        <include>${jasmine.js.src.location}/jasmineDemo.js</include>
                        <include>${jasmine.js.src.location}/sliderAndBarChart.js</include>
                    </preloadSources>
                    <sourceIncludes>
                        <include>${project.basedir}/${jasmine.js.src.location}/**</include>
                        <include>${project.basedir}/web/src/test/javascript/jasmine-plugins/**</include>
                    </sourceIncludes>
                    <jsSrcDir>${jasmine.js.src.location}/</jsSrcDir>
                    <jsTestSrcDir>web/src/test/javascript/spec/</jsTestSrcDir>
                    <browserVersion>FIREFOX_3_6</browserVersion>
                    <haltOnFailure>true</haltOnFailure>
                </configuration>
            </plugin>

        </plugins>

    </build>


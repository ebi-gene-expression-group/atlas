    <properties>
        <java-version>1.7</java-version>
        <jasmine.js.src.location>web/src/main/webapp/public-resources/js</jasmine.js.src.location>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <org.springframework.version>3.1.2.RELEASE</org.springframework.version>
        <org.springframework.rc.version>3.2.0.RC1</org.springframework.rc.version>
        <json-path.version>0.8.1</json-path.version>
        <test.acceptance.pattern>**/acceptance/**/*.java</test.acceptance.pattern>
        <surefire.and.failsafe.report.dir>target/test-report</surefire.and.failsafe.report.dir>
        <!-- default values for configuration properties,
        they are set to local development machine defaults
        and are overridden in profiles for specific deployment environments-->

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>uk.ac.ebi.gxa</groupId>
        <artifactId>atlas</artifactId>
        <version>0.1.4-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>web</artifactId>
    <!--
    <version>... let's inherit version from parent</version>
    -->
    <packaging>war</packaging>
    <name>Gene Expression Atlas WebApp</name>
    <url>http://www.ebi.ac.uk/gxa</url>

    <properties>
        <selenium.version>2.44.0</selenium.version>
        <tiles.version>2.2.2</tiles.version>
        <jasmine.js.src.location>src/main/webapp/resources/js</jasmine.js.src.location>
        <solr.version>5.1.0</solr.version>
    </properties>


    <build>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <escapeString>\</escapeString>
                    <webResources>
                        <resource>
                            <directory>src/main/webapp/resources/js</directory>
                            <includes>
                                <include>AtlasHeatmapReact.js</include>
                            </includes>
                            <targetPath>resources/js</targetPath>
                            <filtering>true</filtering>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.zeroturnaround</groupId>
                <artifactId>jrebel-maven-plugin</artifactId>
                <version>1.1.5</version>
                <executions>
                    <execution>
                        <id>generate-rebel-xml</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.6.2.201302030002</version>
            </plugin>

            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-test</id>
                        <phase>pre-integration-test</phase>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default</id>
                        <phase>integration-test</phase>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>selenium-maven-plugin</artifactId>
                <version>2.3</version>
                <!-- uncomment this block if you need to run the build on a headless server
                <executions>
                    <execution>
                        <configuration>
                            <options>
                                <option>-auth</option>
                                <option>/dev/null</option>
                            </options>
                        </configuration>
                        <id>xvfb</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>xvfb</goal>
                        </goals>
                    </execution>
                </executions>
                -->
            </plugin>

            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <configuration>
                    <!-- application path always starts with /-->
                    <path>/gxa</path>
                </configuration>
                <executions>
                    <execution>
                        <id>tomcat-deploy</id>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                        <phase>pre-integration-test</phase>
                        <configuration>
                            <url>http://lime:14092/manager/html</url>
                            <username>tomcat</username>
                            <password>tomcat</password>
                            <path>/gxa</path>
                            <update>true</update>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.github.searls</groupId>
                <artifactId>jasmine-maven-plugin</artifactId>
                <version>1.3.1.0</version>
                <extensions>true</extensions>
<!--
                <executions>
                    <execution>
                        <id>default</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                    </execution>
                </executions>
-->
                <configuration>
                    <!-- unfortunately js files seem to be loaded only if added to preloadSources -->

                    <!--
                    <preloadSources>
                        <include>...</include>
                        <include>...</include>
                    </preloadSources>
                    -->
                    <sourceIncludes>
                        <include>jquery*.js</include>
                        <include>jquery-ui-1.10.2.custom/js/jquery-ui-1.10.2.custom.js</include>
                        <include>*.js</include>
                    </sourceIncludes>
                    <jsSrcDir>${jasmine.js.src.location}/</jsSrcDir>
                    <jsTestSrcDir>src/test/javascript/spec/</jsTestSrcDir>
                    <browserVersion>FIREFOX_3_6</browserVersion>
                    <haltOnFailure>true</haltOnFailure>
                    <!--
                    when spec execution exceeds the timeout (in seconds), the build fails
                    -->
                    <timeout>300</timeout>
                    <!--
                    the name of the generated JUnit XML report
                    the plugin generates XML of the same brand JUnit does; this is handy for when your CI server is capable of aggregating these XML files (like Jenkins freestyle projects)
                    -->
                    <junitXmlReportFileName>TEST-jasmine.xml</junitXmlReportFileName>
                    <debug>false</debug>
                </configuration>
            </plugin>

        </plugins>
    </build>


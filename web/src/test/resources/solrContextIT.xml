<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--<bean scope="singleton" id="solrServer" class="org.apache.solr.client.solrj.impl.HttpSolrServer">-->
    <!--<constructor-arg value="http://lime.ebi.ac.uk:8983/solr"/>-->
    <!--</bean>-->

    <bean scope="singleton" id="solrServer" class="org.apache.solr.client.solrj.impl.HttpSolrServer">
        <constructor-arg value="http://${solr.test.host}:8983/solr/gxa"/>
    </bean>

    <bean scope="singleton" id="analyticsSolrServer" class="org.apache.solr.client.solrj.impl.HttpSolrServer">
        <constructor-arg value="http://${solr.test.host}:8983/solr/analytics"/>
    </bean>

    <bean scope="singleton" id="differentialConditionsSolrServer" class="uk.ac.ebi.atlas.solr.DummyUpdateSolrServer">
        <constructor-arg value="http://${solr.test.host}:8983/solr/differentialConditions"/>
    </bean>

    <bean scope="singleton" id="baselineConditionsSolrClient" class="uk.ac.ebi.atlas.solr.DummyUpdateSolrServer">
        <constructor-arg value="http://${solr.test.host}:8983/solr/baselineConditions"/>
    </bean>
</beans>